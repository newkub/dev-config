{
	"$schema": "./node_modules/release-it/schema/release-it.json",
	"github": {
	  "release": true
	},
	"npm": {
	  "publish": true
	},
	"git": {
	  "commitMessage": "chore: release v${version}",
	  "pushRepo": "main"
	},
	"hooks": {
	  "before:init": "bun run build"
	},
	"plugins": {
	  "@release-it/conventional-changelog": {
		"preset": "conventional"
	  }
	}
  }
  